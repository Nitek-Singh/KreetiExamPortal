<div class="container my-5">
  <h1 class="text-center mb-4">Exam Schedule</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Subject</th>
        <th>Department</th>
        <th>Start Date and Time</th>
        <th>Duration (mins)</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @registrations.each do |registration| %>
        <tr>
          <td><%= registration.exam.title %></td>
          <td><%= registration.exam.department.name %></td>
          <td><%= registration.exam.start_time.strftime('%b %d, %Y %H:%M %p') %></td>
          <td><%= registration.exam.duration %></td>
          <td>
            <div class="d-flex justify-content-between align-items-center">
              <%= link_to 'Attempt', attempt_registration_path(registration), class: 'btn btn-primary' %>
              <% if Time.now + 30.minutes < registration.exam.start_time %>
                <%= link_to "Appear For Demo Test", demo_attempt_exam_path(id: @exam.id, exam_id: @exam.id), class: "btn btn-outline-success" %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>