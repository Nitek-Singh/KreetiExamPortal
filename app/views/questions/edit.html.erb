<div class="container">
<%= render 'shared/formerrors', model: @question %>
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
    <h1 class="mb-3">Edit Multiple Choice Question</h1>
      <%= form_for([@exam, @question]) do |f| %>
        <div class="form-group">
          <%= f.label :question %>
          <%= f.text_field :question, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :answer %>
          <%= f.text_field :answer, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :option_1 %>
          <%= f.text_field :option_1, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :option_2 %>
          <%= f.text_field :option_2, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :option_3 %>
          <%= f.text_field :option_3, class: 'form-control' %>
        </div><br/>
        <div class="form-group">
          <%= f.submit 'Update Question', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>