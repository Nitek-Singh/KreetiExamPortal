<main role="main" class="container">

  <h1>New Multiple Choice Question</h1>

  <%= form_for([@exam, @question]) do |f| %>
  
    <div class="field">
      <%= f.label :question %><br />
      <%= f.text_field :question %>
    </div>
    <div class="field">
      <%= f.label :answer %><br />
      <%= f.text_field :answer %>
    </div>
    <div class="field">
      <%= f.label :option_1 %><br />
      <%= f.text_field :option_1 %>
    </div>
    <div class="field">
      <%= f.label :option_2 %><br />
      <%= f.text_field :option_2 %>
    </div>
    <div class="field">
      <%= f.label :option_3 %><br />
      <%= f.text_field :option_3 %>
    </div>
    
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

</main><!-- /.container -->