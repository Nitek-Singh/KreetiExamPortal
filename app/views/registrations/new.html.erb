<div class="container">
<h2>New Registration</h2><br/>

<%= form_with model: @registration, url: registrations_path do |form| %>
  <%= form.hidden_field :user_id %>

  <div class="field">
    <%= form.label :exam_id %>
    <%= form.collection_select :exam_id, Exam.all, :id, :title %>
  </div><br/>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', registrations_path %>
</div>