<h1>Editing Registration</h1>
<%= form_with model: @registration do |form| %>
<%= form.hidden_field :user_id %>
<div class="field">
  <%= form.label :exam_id %>
  <%= form.collection_select :exam_id, Exam.all, :id, :title %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>
<%= link_to 'Back', registrations_path %>