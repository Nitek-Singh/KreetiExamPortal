<div class="container">
  <h1 class="mt-4 mb-4">Listing Registrations</h1>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">User</th>
        <th scope="col">Exam</th>
        <th colspan="3" scope="col">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @registrations.each do |registration| %>
        <tr>
          <td><%= registration.user.name %></td>
          <td><%= registration.exam.title %></td>
          <td><%= link_to 'Show', registration, class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Edit', edit_registration_path(registration), class: "btn btn-outline-secondary btn-sm" %></td>
          <td><%= button_to 'Delete', registration, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-right">
    <%= link_to 'New Registration', new_registration_path, class: "btn btn-outline-success" %>
  </div>
</div>