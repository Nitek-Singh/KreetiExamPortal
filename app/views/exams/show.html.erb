<main role="main" class="container">

  <p>
    <b>Title:</b> <%= @exam.title %>
  </p>

  <p>
    <b>start_time:</b> <%= @exam.start_time %>
  </p>

  <p>
    <b>duration:</b> <%= @exam.duration %>
  </p>

  <table class="table table-sm">
    <thead>
      <tr>
        <th scope="col">Question</th>
        <th scope="col">Answer</th>
        <th scope="col">Option 1</th>
        <th scope="col">Option 2</th>
        <th scope="col">Option 3</th>
      </tr>
    </thead>
    <tbody>
      <% @exam.questions.shuffle.each do |question| %>
        <tr>
          <td><%= question.question %></td>
          <td><%= question.answer %></td>
          <% options = [question.option_1, question.option_2, question.option_3].shuffle %>
          <td><%= options[0] %></td>
          <td><%= options[1] %></td>
          <td><%= options[2] %></td>
          <td><%= link_to 'Edit', edit_exam_question_path(@exam, question) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p>
    <%= link_to 'Edit', edit_exam_path(@exam) %> |
    <%= link_to 'Back', exams_path %> |
    <%= link_to 'Add New Question', new_exam_question_path(@exam) %>
  </p>

</main><!-- /.container -->