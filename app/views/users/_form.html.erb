<div class="container">
<%= render 'shared/formerrors', model: @user %>
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <%= form_with(model: @user, class: "shadow p-3 mb-3 rounded", local: true) do |f| %>
        <div class="form-group mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter Your Name" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :department, class: "form-label" %>
          <%= f.text_field :department, class: "form-control", placeholder: "Enter Your Department" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :college_id, class: "form-label" %>
          <%= f.select :college_id, class: "form-select" do %>
            <% College.all.each do |college| %>
              <option value="<%= college.id %>"><%= college.name %></option>
            <% end %>
          <% end %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, class: "form-control", placeholder: "Tell something about yourself" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :linkedin_url, class: "form-label" %>
          <%= f.text_field :linkedin_url, class: "form-control", placeholder: "Enter Your LinkedIn URL" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
