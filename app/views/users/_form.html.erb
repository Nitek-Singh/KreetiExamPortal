<div class="container">
  <%= render 'shared/formerrors', model: @user %>
  <div class="row justify-content-center">
  <p class="mt-3 text-center">Already have an account? <%= link_to 'Login here', login_path %></p>
    <div class="col-md-8 col-lg-6">
      <%= form_with(model: @user, class: "shadow p-3 mb-3 rounded", local: true) do |f| %>
        <div class="form-group mb-3">
          <%= f.label :name, class: "form-label" do %>
            <%= content_tag(:span, '*', class: 'text-danger me-1') %>
            <%= "Enter Your Name" %>
          <% end %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter Your Name", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :college_id, class: "form-label" do %>
            <%= content_tag(:span, '*', class: 'text-danger me-1') %>
            <%= "Select Your College" %>
          <% end %>
          <%= f.select :college_id, class: "form-select", required: true do %>
            <% College.all.each do |college| %>
              <option value="<%= college.id %>"><%= college.name %></option>
            <% end %>
          <% end %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :email, class: "form-label" do %>
            <%= content_tag(:span, '*', class: 'text-danger me-1') %>
            <%= "Enter your email address" %>
          <% end %>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, class: "form-label" do %>
            <%= content_tag(:span, '*', class: 'text-danger me-1') %>
            <%= "Enter Password" %>
          <% end %>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, class: "form-label" do %>
            <%= content_tag(:span, '*', class: 'text-danger me-1') %>
            <%= "Confirm Password" %>
          <% end %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, class: "form-control", placeholder: "Tell something about yourself" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :linkedin_url, class: "form-label" %>
          <%= f.text_field :linkedin_url, class: "form-control", placeholder: "Enter Your LinkedIn URL" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Sign Up", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
      </div>
      </div>
      </div>