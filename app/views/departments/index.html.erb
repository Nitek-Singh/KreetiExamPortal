<div class="container">
  <div class="card mt-2">
    <div class="card-header">
      <h2>Department List</h2>
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @departments.each do |department| %>
            <tr>
              <td><%= department.name %></td>
              <td><%= link_to 'Edit', edit_department_path(department), class: 'btn btn-sm btn-primary' %></td>
              <td><%= button_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger', onclick: 'confirmDelete(event)' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <button class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#addDepartmentModal">Add Department</button>
    </div>
  </div>
</div>

<div class="modal fade" id="addDepartmentModal" tabindex="-1" aria-labelledby="addDepartmentModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= render 'shared/formerrors', model: @department %>
      <div class="modal-header">
        <h5 class="modal-title" id="addDepartmentModalLabel">Add Department</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @department, url: departments_path, local: true, id: "newDepartmentForm") do |form| %>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control', required: true %>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" form="newDepartmentForm" class="btn btn-primary">Save</button>
      </div>
      <% end %>
    </div>
  </div>
</div>