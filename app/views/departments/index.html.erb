<div class="container">
  <div class="card mt-2">
    <div class="card-header">
      <h2>Department List</h2>
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @departments.each do |department| %>
            <tr>
              <td><%= department.name %></td>
              <td><%= link_to 'Edit', edit_department_path(department), class: 'btn btn-sm btn-primary' %></td>
              <td><%= button_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-header">
      <h2>Add Department</h2>
    </div>
    <div class="card-body">
      <%= form_with(model: @department, url: departments_path, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group my-2">
          <%= form.submit 'Save', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>