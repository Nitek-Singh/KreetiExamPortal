<div class="container mt-2" style="width: 50%;">
<%= render 'shared/formerrors', model: @college %>
  <%= form_with(model: @college, url: college_path(@college), method: :patch, local: true) do |form| %>
    <h2 class="mt-4 mb-2">Edit College</h2>

    <div class="mb-2">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="d-grid gap-2">
      <%= form.submit 'Update', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
