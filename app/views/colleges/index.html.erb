<div class="container mt-3">
  <div class="card">
    <div class="card-header">
      <h2 class="mb-0">List Of Colleges</h2>
    </div>
    <div class="card-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @colleges.each do |college| %>
            <tr>
              <td><%= college.name %></td>
              <td class="d-flex">
                <%= link_to 'Edit', edit_college_path(college), class: 'btn btn-sm btn-primary me-2' %>
                <%= button_to 'Delete', college, method: :delete, class: 'btn btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= form_with(model: @college, url: colleges_path, local: true) do |form| %>
        <h2 class="mt-4 mb-3">New College</h2>
        <div class="mb-3">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="d-grid gap-2">
          <%= form.submit 'Create', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>